generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id            String      @id @default(cuid())
  name          String
  email         String      @unique
  bio           String?
  portfolioUrl  String?
  stripeId      String?
  bookings      Booking[]
  messages      Message[]
  createdAt     DateTime    @default(now())
}

model Booking {
  id            String      @id @default(cuid())
  artistId      String
  clientName    String
  clientEmail   String
  date          DateTime
  status        String      @default("pending")
  price         Float
  paymentId     String?
  artist        Artist      @relation(fields: [artistId], references: [id])
  createdAt     DateTime    @default(now())
}

model Message {
  id            String      @id @default(cuid())
  artistId      String
  sender        String
  content       String
  artist        Artist      @relation(fields: [artistId], references: [id])
  createdAt     DateTime    @default(now())
}

model Payment {
  id            String      @id @default(cuid())
  bookingId     String
  amount        Float
  status        String
  stripeIntent  String?
  createdAt     DateTime    @default(now())
  booking       Booking     @relation(fields: [bookingId], references: [id])
}
